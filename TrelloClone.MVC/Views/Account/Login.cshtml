@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap | TrelloClone</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .background-image {
            background-image: url('/background1.webp');
            background-size: cover;
            background-position: center;
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .login-container {
            width: 400px;
            height: 300px;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            align-content: center;
            
        }

        .login-form {
            display: flex;
            flex-direction: column;
            margin-bottom: 35px;
        }

            .login-form input[type="email"],
            .login-form input[type="password"] {
                padding: 10px;
                margin-bottom: 10px;
                border: 1px solid #ddd;
                border-radius: 4px;
            }

            .login-form button {
                padding: 10px;
                border: none;
                border-radius: 4px;
                background-color: #0079bf;
                color: white;
                cursor: pointer;
            }

                .login-form button:hover {
                    background-color: #026aa7;
                }
    </style>
</head>
<body>
    <div class="background-image"></div>
    <div class="login-container">
        <h2>Log in to TrelloClone</h2>
        <form class="login-form" asp-action="Login" asp-controller="Account" method="post">
            <input type="email" asp-for="Username" placeholder="Enter your email" required>
            <input type="password" asp-for="Password" placeholder="Password" required>
            <button type="submit">Continue</button>
        </form>
    </div>
</body>
</html>
